<%= form_for(post) do |f| %>
  
   <%= f.hidden_field :author, value: current_user.firstname if current_user.present? %>
  <div class="field">
    <%= f.label :question %>
    <%= f.text_field :question %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
