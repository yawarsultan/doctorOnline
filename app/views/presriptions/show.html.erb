<div class="container">
    <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>Doctor Name: <%= @presription.user.firstname %> <%= @presription.user.lastname%></strong>
                        
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>Date: <%= @presription.created_at.strftime("%d %b, %Y") %></em>
                    </p>
                    <p>
                        <em>Prescription #: <%=@presription.id%></em>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1>Prescription</h1>
                </div>
                </span>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Patient Age</th>
                            <th class="text-center">Disease</th>
                            <th class="text-center">Drug Name</th>
                            <th class="text-center">Drug Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="col-md-9"><em><%= @presription.name%></em></h4></td>
                            <td class="col-md-1" style="text-align: center"><%= @presription.age%> </td>
                            <td class="col-md-1 text-center"><%= @presription.disease%></td>
                            <td class="col-md-1 text-center"><%= @presription.drug_name%></td>
                            <td class="col-md-1 text-center"><%= @presription.quantity%></td>

                        </tr>
                        
                    </tbody>
                </table>
                <%= link_to '<button type="button" class="btn btn-info btn-lg btn-block">
                    Download/Print   <span class="fa fa-chevron-right"></span>
                </button>'.html_safe, presription_path(@presription, format: "pdf"), :target => '_blank'%>
              </td>
            </div>
        </div>
    </div>
</div>    
