<% @receipts.each do |receipt| %>
    <% message = receipt.message %>

    <div class="media">
      <div class="media-left">
        <!-- user avators can go here -->
        <a href="#">
          <% if message.sender.avatar.url.present?%>
            <%= image_tag(message.sender.avatar.url(:thumb), class: "media-object") %>
          <%else%>
            <img class="media-object" src="http://placehold.it/64x64" alt="...">
          <%end%>
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading">
          <%= message.sender.firstname %> <br>
          <small><b>Subject: </b><%= message.subject %></small><br>
          <small><b>Date: </b><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
        </h4>
        <%= message.body %>
      </div>
    </div>
<% end %>