<div class="container">
    <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>Doctor Name: <%= @history.user.firstname %> <%= @history.user.lastname%></strong>
                        
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>Date: <%= @history.created_at.strftime("%d %b, %Y") %></em>
                    </p>
                    <p>
                        <em>History #: <%=@history.id%></em>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1>History</h1>
                </div>
                </span>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Patient Age</th>
                            <th class="text-center">Reason</th>
                        </tr>
                    </thead>
                    <tbody>
                            <td class="col-md-1"><em><%= @history.firstname%></em></td>
                            <td class="col-md-1"><em><%= @history.lastname%></em></td>
                            <td class="col-md-1" style="text-align: center"><%= @history.age%> </td>
                            <td class="col-md-1 text-center"><%= @history.reason%></td>

                        </tr>
                        
                    </tbody>
                </table>
                <%= link_to '<button type="button" class="btn btn-info btn-lg btn-block">
                    Download/Print   <span class="glyphicon glyphicon-chevron-right"></span>
                </button>'.html_safe, history_path(@history, format: "pdf"), :target => '_blank'%>
              </td>
            </div>
        </div>
    </div>
<%#= link_to 'Edit', edit_history_path(@history) %> 
